{
  "targets":{
    "app":{
      "deploy":"/usr/bin/deploy myapp --sha _PAYLOAD_",
      "verify":"/usr/bin/diff <(cd /myapp && git rev-parse HEAD) <(echo '{{.Argument}}')",
      "directory":"/tmp"
    },
    "config":{
      "deploy":"/usr/bin/deploy config --sha _PAYLOAD_",
      "verify":"/usr/bin/diff <(cd /config && git rev-parse HEAD) <(echo '{{.Argument}}')"
    }
  }
}
